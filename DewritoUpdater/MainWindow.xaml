    <Label x:Name="TitleLabel" Content="ELDEWRITO" Grid.Column="0" Foreground="White" VerticalAlignment="Center"
           HorizontalAlignment="Center" Margin="0,150,0,0" FontSize="40" FontFamily="Lato Semibold" />
    <Button Grid.Column="0" Click="d_Click" Margin="127,344,0,192" Background="Transparent" HorizontalAlignment="Left"
            Width="30" />
    <Button Grid.Column="0" Style="{StaticResource AccentedSquareButtonStyle}" x:Name="BtnSkip" Content="Skip"
            Click="BTNSkip_OnClick"
            controls:ButtonHelper.PreserveTextCase="True" VerticalAlignment="Bottom" HorizontalAlignment="Left"
            Margin="20,0,0,100" Height="40" Width="100" BorderBrush="{x:Null}" FontSize="16" />

    <StackPanel Grid.Column="0" Orientation="Horizontal" Height="50" VerticalAlignment="Bottom" Margin="20,20,20,40">
      <Button Style="{StaticResource AccentedSquareButtonStyle}" x:Name="BtnAction" Content="Validating"
              Click="Action_OnClick" controls:ButtonHelper.PreserveTextCase="True" Height="50" Width="150"
              BorderBrush="{x:Null}" FontSize="16" />
      <Rectangle Width="30" Height="30" Margin="30,0,0,0" MouseDown="Reddit_OnClick"
                 ToolTip="Halo Online Subreddit">
        <Rectangle.OpacityMask>
          <VisualBrush Stretch="Uniform" Visual="{StaticResource appbar_social_reddit}" />
        </Rectangle.OpacityMask>
        <Rectangle.Style>
          <Style TargetType="{x:Type Rectangle}">
            <Setter Property="Fill" Value="{DynamicResource AccentColorBrush2}" />
            <Style.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" Value="{DynamicResource AccentColorBrush}" />
              </Trigger>
            </Style.Triggers>
          </Style>
        </Rectangle.Style>
      </Rectangle>
      <Rectangle Width="30" Height="30" Margin="30,0,0,0" MouseDown="Github_OnClick"
                 ToolTip="Launcher Github">
        <Rectangle.OpacityMask>
          <VisualBrush Stretch="Uniform" Visual="{StaticResource appbar_social_github_octocat_solid}" />
        </Rectangle.OpacityMask>
        <Rectangle.Style>
          <Style TargetType="{x:Type Rectangle}">
            <Setter Property="Fill" Value="{DynamicResource AccentColorBrush2}" />
            <Style.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" Value="{DynamicResource AccentColorBrush}" />
              </Trigger>
            </Style.Triggers>
          </Style>
        </Rectangle.Style>
      </Rectangle>
      <Rectangle Width="30" Height="30" Margin="30,0,0,0" MouseDown="Twitter_OnClick"
                 ToolTip="Launcher Dev Twitter">
        <Rectangle.OpacityMask>
          <VisualBrush Stretch="Uniform"
                       Visual="{StaticResource appbar_twitter_bird}" />
        </Rectangle.OpacityMask>
        <Rectangle.Style>
          <Style TargetType="{x:Type Rectangle}">
            <Setter Property="Fill" Value="{DynamicResource AccentColorBrush2}" />
            <Style.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" Value="{DynamicResource AccentColorBrush}" />
              </Trigger>
            </Style.Triggers>
          </Style>
        </Rectangle.Style>
      </Rectangle>
    </StackPanel>
    <Label Grid.Column="0" x:Name="LblVersion" Content="Current Version: Validating"
           controls:ButtonHelper.PreserveTextCase="True"
           FontWeight="Bold" FontSize="12" Height="30" Foreground="{DynamicResource AccentColorBrush}"
           VerticalAlignment="Bottom" Margin="16,20,45,5" Width="Auto" HorizontalContentAlignment="Left"
           BorderBrush="{x:Null}" Background="{x:Null}" />
    <!-- Main Buttons -->
    <Grid Grid.Column="1">
      <controls:Tile Width="Auto" Height="135" Margin="0,15,20,0" VerticalAlignment="Top"
                     ToolTip="Customize Your Spartan and Username"
                     Title="Player Customization" CountFontSize="18" Click="Custom_Click"
                     Foreground="{DynamicResource IdealForegroundColorBrush}">
        <Rectangle x:Name="CustomIcon" Width="64" Height="64" Fill="White">
          <Rectangle.OpacityMask>
            <VisualBrush Stretch="Uniform"
                         Visual="{StaticResource appbar_draw_paintbrush}" />
          </Rectangle.OpacityMask>
        </Rectangle>
      </controls:Tile>
      <controls:Tile Width="Auto" Height="135" Margin="0,160,20,0" VerticalAlignment="Top" Title="Settings"
                     ToolTip="Change Game and Host Settings"
                     CountFontSize="18" Click="Settings_Click" Foreground="{DynamicResource IdealForegroundColorBrush}">
        <Rectangle x:Name="SettingsIcon" Width="64" Height="64" Fill="White">
          <Rectangle.OpacityMask>
            <VisualBrush Stretch="Uniform"
                         Visual="{StaticResource appbar_settings}" />
          </Rectangle.OpacityMask>
        </Rectangle>
      </controls:Tile>
      <controls:Tile Width="Auto" Height="135" Margin="0,305,20,0" VerticalAlignment="Top" Title="VOIP Settings"
                     ToolTip="Adjust Voice Over IP Settings"
                     CountFontSize="18" Click="Voip_Click" Foreground="{DynamicResource IdealForegroundColorBrush}">
        <Rectangle x:Name="VoipIcon" Width="64" Height="64" Fill="White">
          <Rectangle.OpacityMask>
            <VisualBrush Stretch="Uniform"
                         Visual="{StaticResource appbar_microphone}" />
          </Rectangle.OpacityMask>
        </Rectangle>
      </controls:Tile>
      <controls:Tile Width="Auto" Height="135" Margin="0,450,214,0" VerticalAlignment="Top" Title="Auto Exec"
                     ToolTip="Create an Auto Executing Script"
                     CountFontSize="18" Click="AutoExec_Click" Foreground="{DynamicResource IdealForegroundColorBrush}">
        <Rectangle x:Name="AutoExecIcon" Width="64" Height="64" Fill="White">
          <Rectangle.OpacityMask>
            <VisualBrush Stretch="Uniform"
                         Visual="{StaticResource appbar_page_code}" />
          </Rectangle.OpacityMask>
        </Rectangle>
      </controls:Tile>
      <controls:Tile Width="Auto" Height="135" Margin="194,450,20,0" VerticalAlignment="Top" Title="Console"
                     ToolTip="Control ElDorito with this remote console"
                     CountFontSize="18" Click="Console_Click" Foreground="{DynamicResource IdealForegroundColorBrush}">
        <Rectangle x:Name="ConsoleIcon" Width="64" Height="64" Fill="White">
          <Rectangle.OpacityMask>
            <VisualBrush Stretch="Uniform"
                         Visual="{StaticResource appbar_console}" />
          </Rectangle.OpacityMask>
        </Rectangle>
      </controls:Tile>
    </Grid>
  </Grid>
</controls:MetroWindow>
